{
  "name": "edufiles",
  "version": "1.0.0",
  "description": "Gestor de archivos institucionales",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
  "appId": "com.edufiles.v2",
  "productName": "EduFiles",
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "icon.ico"
  },
  "nsis": {
    "oneClick": true,
    "allowToChangeInstallationDirectory": false,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "shortcutName": "EduFiles"
  }
}
}